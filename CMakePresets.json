            ]
        },
        {
            "name": "iwyu",
            "configurePreset": "iwyu",
            "inherits": [
                "ninja"
            ]
        }
    ],
    "workflowPresets": [
        {
            "name": "linux-novcpkg-debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "linux-novcpkg-debug"
                },
                {
                    "type": "build",
                    "name": "linux-novcpkg-debug"
                }
            ]
        },
        {
            "name": "linux-debug",
            "steps": [
                {
                    "type": "configure",
                    "name": "linux-debug"
                },
                {
                    "type": "build",
