{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 26,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "vcpkg",
            "hidden": true,
            "toolchainFile":
                "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
            "environment": {
                "VCPKG_OVERLAY_TRIPLETS":
                    "${sourceDir}/external/vcpkg-overlay/triplets"
            },
            "cacheVariables": {
                "OT_BOOST_JSON_HEADER_ONLY": "OFF",
                "HAVE_EGL": "ON"
            }
        },
        {
            "name": "mode-debug",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "mode-release",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "compiler-clang",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++"
            }
        },
        {
            "name": "compiler-gcc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "compiler-msvc",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_C_COMPILER:FILEPATH":
                    "$env{VSINSTALLDIR}VC/Tools/MSVC/$env{VCToolsVersion}/bin/Host$env{VSCMD_ARG_HOST_ARCH}/$env{VSCMD_ARG_TGT_ARCH}/cl.exe",
                "CMAKE_CXX_COMPILER:FILEPATH":
                    "$env{VSINSTALLDIR}VC/Tools/MSVC/$env{VCToolsVersion}/bin/Host$env{VSCMD_ARG_HOST_ARCH}/$env{VSCMD_ARG_TGT_ARCH}/cl.exe"
            }
        },
        {
            "name": "generator-ninja",
            "displayName": "ninja",
            "generator": "Ninja"
        },
        {
            "name": "generator-xcode",
            "displayName": "xcodebuild",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_MAKE_PROGRAM": "xcodebuild"
            }
        },
        {
            "name": "common",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "inherits": [
                "generator-ninja"
            ],
            "cacheVariables": {
                "METIER_PEDANTIC_BUILD": "OFF",
                "CMAKE_UNITY_BUILD": "OFF"
            }
        },
        {
            "name": "host-Linux",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Linux"
            },
            "inherits": [
                "common",
                "compiler-gcc"
            ]
        },
        {
            "name": "host-Macos",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "inherits": [
                "common",
                "compiler-clang"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-osx-11",
                "CMAKE_MAKE_PROGRAM": "ninja"
            }
        },
        {
            "name": "host-Macos-M1",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            },
            "inherits": [
                "common",
                "compiler-clang"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "arm64-osx",
                "CMAKE_MAKE_PROGRAM": "ninja"
            }
        },
        {
            "name": "host-Windows",
            "hidden": true,
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            },
            "inherits": [
                "common",
                "compiler-msvc"
            ],
            "cacheVariables": {
                "VCPKG_TARGET_TRIPLET": "x64-windows-static",
                "CMAKE_MAKE_PROGRAM": "ninja.exe",
                "CMAKE_EXE_LINKER_FLAGS": "/STACK:8388608"
            }
        },
        {
            "name": "linux-novcpkg-debug",
            "displayName": "debug build without vcpkg",
            "description": "configure debug build without vcpkg",
            "inherits": [
                "host-Linux",
                "mode-debug"
            ]
        },
        {
            "name": "linux-debug",
            "displayName": "debug build",
            "description": "configure debug build",
            "inherits": [
                "linux-novcpkg-debug",
                "vcpkg"
            ]
        },
        {
            "name": "windows-debug",
            "displayName": "debug build",
            "description": "configure debug build",
            "inherits": [
                "host-Windows",
                "mode-debug",
                "vcpkg"
            ]
        },
        {
            "name": "windows-release",
            "displayName": "release build",
            "description": "configure release build",
            "inherits": [
                "host-Windows",
                "mode-release",
                "vcpkg"
            ]
        },
        {
            "name": "macos-debug",
            "displayName": "debug build",
            "description": "configure debug build",
            "inherits": [
                "host-Macos",
                "mode-debug",
                "vcpkg"
            ]
        },
        {
            "name": "macos-xcode",
            "displayName": "xcode build",
            "description": "configure Xcode IDE build",
            "inherits": [
                "generator-xcode",
                "macos-debug"
            ]
        },
        {
            "name": "macos-release",
            "displayName": "release build",
            "description": "configure release build",
            "inherits": [
                "host-Macos",
                "mode-release",
                "vcpkg"
            ]
        },
        {
            "name": "macos-m1-debug",
            "displayName": "debug build",
            "description": "configure debug build",
            "inherits": [
                "host-Macos-M1",
                "mode-debug",
                "vcpkg"
            ]
        },
        {
            "name": "macos-m1-release",
            "displayName": "release build",
            "description": "configure release build",
            "inherits": [
                "host-Macos-M1",
                "mode-release",
                "vcpkg"
            ]
        },
        {
            "name": "iwyu",
            "displayName": "iwyu",
            "description": "configure build for include-what-you-use ci check",
            "inherits": "linux-novcpkg-debug",
            "cacheVariables": {
                "BUILD_SHARED_LIBS": "ON",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_UNITY_BUILD": "OFF",
                "METIER_PEDANTIC_BUILD": "OFF",
                "METIER_IWYU": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "hidden": true,
            "name": "ninja",
            "nativeToolOptions": [
                "-k 0"
